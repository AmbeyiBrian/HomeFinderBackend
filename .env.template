# Django settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
ALLOWED_HOSTS=api.homefinder254.com
CORS_ALLOWED_ORIGINS=https://homefinder254.com

# Database settings
DB_NAME=homefinderdb
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=5432
DB_SSL_MODE=prefer

# AWS settings
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_FILE_OVERWRITE=False
AWS_DEFAULT_ACL=public-read

# M-Pesa settings
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=your-shortcode
MPESA_PASSKEY=your-passkey
MPESA_CALLBACK_BASE_URL=https://api.homefinder254.com

# Redis settings
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# For production Redis with SSL
REDIS_SSL_CERT_REQS=CERT_REQUIRED
REDIS_CA_CERTS_PATH=/path/to/ca.crt

# Sentry settings
SENTRY_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1
ENVIRONMENT=production

# AI/ML settings
HUGGING_FACE_API_TOKEN=your-huggingface-token